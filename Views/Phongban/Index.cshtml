@model IEnumerable<QLNS.Models.Phongban>

@{
    ViewData["Title"] = "Index";
}

<h1>Phòng ban</h1>

<p>
    <a asp-action="Create">Tạo phòng ban mới</a><br>
    <a asp-action="Upload">Upload Excel</a>
</p>
<table class="table">
    <thead>
        <tr>
             <th>
                @Html.DisplayNameFor(model => model.MaPhong)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TenPhong)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.MaPhong)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TenPhong)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.MaPhong">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.MaPhong">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.MaPhong">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
